# Local Development Configuration
# Copy this file to .env.local for local development

# Server Configuration
PORT=4000
NODE_ENV=development

# Service URLs for local development
AUTH_SERVICE_URL=http://localhost:8081
DOCUMENT_SERVICE_URL=http://localhost:8080
MEMORY_SERVICE_URL=http://localhost:8082
AI_SERVICE_URL=http://localhost:8083

# JWT Configuration (use a secure secret in production)
JWT_SECRET=local-development-secret-change-me
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,https://god-in-a-box.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GraphQL Configuration
GRAPHQL_DEPTH_LIMIT=10
GRAPHQL_COMPLEXITY_LIMIT=1000

# Google Cloud Configuration (for local development)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json