# Server Configuration
PORT=4000
NODE_ENV=development

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Service URLs (Cloud Functions)
AUTH_SERVICE_URL=https://auth-function-xxxxx.cloudfunctions.net
DOCUMENT_SERVICE_URL=https://novel-document-service-xxxxx.cloudfunctions.net
MEMORY_SERVICE_URL=https://novel-memory-service-xxxxx.cloudfunctions.net
AI_SERVICE_URL=https://novel-ai-service-xxxxx.cloudfunctions.net

# JWT Configuration
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GraphQL Configuration
GRAPHQL_DEPTH_LIMIT=10
GRAPHQL_COMPLEXITY_LIMIT=1000