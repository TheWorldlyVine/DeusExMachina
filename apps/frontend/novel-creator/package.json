{
  "name": "@deusexmachina/novel-creator",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered novel creation platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && cp dist/index.html dist/404.html && echo '/* /index.html 200' > dist/_redirects",
    "preview": "vite preview",
    "test": "vitest run --reporter=dot --no-coverage",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:prod": "E2E_BASE_URL=https://god-in-a-box.com playwright test",
    "test:spa-routing": "./test-spa-routing.sh",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist node_modules"
  },
