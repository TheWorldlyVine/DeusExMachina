<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude generated code -->
    <Match>
        <Source name="~.*generated.*" />
    </Match>
    
    <!-- Exclude test code from certain checks -->
    <Match>
        <Class name="~.*Test$" />
        <Bug pattern="DM_DEFAULT_ENCODING,OS_OPEN_STREAM" />
    </Match>
    
    <!-- Exclude specific patterns that are acceptable in our codebase -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*DTO$|~.*Request$|~.*Response$" />
    </Match>
</FindBugsFilter>